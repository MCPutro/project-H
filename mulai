class Background extends PanelUI {
    ImageIcon background = new ImageIcon(getClass().getResource("/gambar/cctv.jpg"));
    public void paint(Graphics g, JComponent c) {
         g.drawImage(background.getImage(), 0, 0, null);
    }
}
