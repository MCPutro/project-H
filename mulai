    Timer timer;
    private ActionListener action;
    
    public mulai() {
        setUndecorated(true);
        
        initComponents();
        jPanel1.setUI(new Background());
        
        Dimension dim = Toolkit.getDefaultToolkit().getScreenSize();
        int x = (dim.width-getWidth())/2;
        int y = (dim.height-getHeight())/2;
        setLocation(x, y);
        
        aksiProgressBar();
        timer = new Timer(50, action);
        timer.start();
        System.out.println("bikib "+pembuat.getLocation());
        
    }
    
    
    
    public void aksiProgressBar() {
        action = new ActionListener() {
            @Override
            public void actionPerformed(ActionEvent e) {
                bar.setValue(bar.getValue() + 1); //persen progress bar bertambah setiap 5 kali
//              bar.setStringPainted(true);
                if (bar.getPercentComplete() == 1.0) { // jika persen dari progress bar telah 100%
                    try {
                        timer.stop();
                        
                        new webCam().setVisible(true);
                        
                    }    
                    catch (Throwable ex) {} 
                }
            }
            
        };
    this.dispose();
    
    }

